# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.py]
max_line_length = 99

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.toml]
indent_size = 2

[*.md]
indent_size = unset

[*.txt]
indent_size = unset

[.all-contributorsrc]
indent_size = unset
